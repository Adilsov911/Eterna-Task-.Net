
@{ 
    List<Offer> offers = ViewBag.Offer;
} 

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Pricing</li>
            </ol>
            <h2>Pricing</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container">

            <div class="row no-gutters">


                @foreach (Pricing item in Model)
                {
                    if (item.Id == 2)
                    {



                        <div class="col-lg-4 box featured">
                            <h3>@item.Name</h3>
                            <h4>$@item.Price<span>per month</span></h4>
                            <ul>
                                @foreach (Offer offer in offers)
                                {
                                    if (item.PricingServices.Exists(ps => ps.OfferId == offer.Id))
                                    {
                                        <li><i class="bx bx-check"></i> @offer.Name</li>
                                    }
                                    else
                                    {
                                        <li class="na"><i class="bx bx-x"></i> <span>@offer.Name</span></li>
                                    }
                                }

                            </ul>
                            <a href="#" class="buy-btn">Buy Now</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 box">
                            <h3>@item.Name</h3>
                            <h4>$@item.Price<span>per month</span></h4>
                            <ul>
                                @foreach (Offer offer in offers)
                                {
                                    if (item.PricingServices.Exists(ps => ps.OfferId == offer.Id))
                                    {
                                        <li><i class="bx bx-check"></i> @offer.Name</li>
                                    }
                                    else
                                    {
                                        <li class="na"><i class="bx bx-x"></i> <span>@offer.Name</span></li>
                                    }
                                }

                            </ul>
                            <a href="#" class="buy-btn">Buy Now</a>
                        </div>
                    }
                }

           


            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->